.col-xs-12.panel-filtercat(ng-controller="BookSearchFilterCategoriesCtrl as vm")
    .row
        .col-xs-12.col-sm-5.col-lg-3.nopaddings
            angular-typeaheadjs(
            remote="{{vm.urlRemote}}",
            prefetch="{{vm.urlPrefetch}}",
            cssinput="searchfiltercat form-control",
            datasource="categories",
            placeholder="filtrar por categorias",
            onselected="vm.onSelected",
            logonwarn="true",
            clearvalue="true")
        .col-xs-12.col-sm-7.col-lg-9.panel-filtercatlabel-group
            div.panel-filtercat-label(ng-repeat="item in vm.filtro")
                | {{item}}
                span.badge.labelcat-badge(ng-click="vm.removeCat(item)") x
