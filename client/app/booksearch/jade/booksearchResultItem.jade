.row.dynamic-layout-item.element-item
    div.block-price {{::it.price}} €
    div.block-price-icons-triangshadow
    div.panel.panel-default
        div.panel-heading.block-title
            a(ui-sref="main.bookdetail({bookid:it._id})")
                span.title {{::it.title}}
            div
                span.fielditem(ng-repeat="author in ::it.authors") {{::author}}
        div.panel-body
            ul.list-group.block-edicao-container
                li.list-group-item.block-edicao
                    span
                    span {{::it.editionNumber}} Edição,
                    span {{::it.editionYear}} {{::it.editionCountry}}
                    br
                    span {{::it.editionPublisher}}
                    br.hidden-xs
                    span.hidden-xs ISBN:{{::it.editionISBN}}
            carousel.carousel(interval="0")
                slide(ng-repeat="foto in ::it.images")
                    a(ui-sref="main.bookdetail({bookid:it._id})")
                        img.block-image(ng-src="{{::foto}}")

